<!DOCTYPE html>
<html>
<head>
  <title><%= t :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="padding-top: 60px;">

	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
	      <div class="container">
	      	<%= link_to t(:title), root_path, :class => "brand"%>
			<ul class='nav'>
				<li><%= link_to "Receitas", recipes_path %></li>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown">
					    Admin
					    <b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to "Categorias - Admin", admin_categories_path %></li>
						<li><%= link_to "Receitas - Admin", admin_recipes_path %></li>
					</ul>
				</li>
			</ul>
			
			<%= form_tag recipes_path, :method => :get, :class => "navbar-search pull-right" do %>
			    <%= text_field_tag :search, "",
			          :placeholder => "Busca de Receitas",
			          :type => "search",
			          :class => "search-query" %>
			    <button type="submit" class="btn-primary btn-mini">Buscar</button>
			<% end %>
			
	      </div>
		</div>
	</div>

	<div class='container'>

		<div class='row'>
			<div class='span12'>
				<%= yield %>
			</div>
		</div>

	<p>Criado por Cristine Mari Aguilar</p>

	<%= flash_messages %>
	
	</div>

</body>
</html>
